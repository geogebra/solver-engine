{
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es2022": true
  },
  "rules": {
    "semi": "error",
    "eqeqeq": "error"
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
