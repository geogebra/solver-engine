  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 2,
  },
  // cSpell settings go with the vscode extension that has the ID
  // streetsidesoftware.code-spell-checker
  "cSpell.words": ["GeoGebra", "IntelliJ", "subexpression", "Vite"],
  // "cSpell.ignoreWords" is like "cSpell.words", except that words in
  // "cSpell.words" may appear in the spelling suggestions list, unlike the
  // words in "cSpell.ignoreWords"
  "cSpell.ignoreWords": [
    "Bitstream",
    "KaTeX",
    "Mergely",
    "arcsin",
    "detekt",
    "gmath",
    "ignorews",
    "infty",
    "jsondiffpatch",
    "ktlint",
    "mathrm",
    "plut",
    "pmatrix",
    "textrm",
    "vueuse",
  ],
  "gitlens.remotes": [{ "domain": "git.geogebra.org", "type": "GitLab" }],
  // David Ludlow still can't get this to work (he uses Windows, that might be relevant)
  "vitest.commandLine": "npx vitest --environment jsdom",
}
